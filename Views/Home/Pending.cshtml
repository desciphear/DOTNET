@{
}

@model List<Request>

<style>
    body {
        background-color: #fbfbfb;
    }

    .table-container {
        margin-top: 100px; /* Adjust this value as needed */
    }

    .navbar-nav .nav-item .nav-link.active {
        background-color: #e9ecef;
        border-radius: 5px;
    }
</style>


<header>
    <!-- Navbar -->
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Brand -->
            <a class="navbar-brand" href="#">
                <img src="" height="25" alt="MDB Logo" loading="lazy" />
            </a>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Landing">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Requests">
                            <i class="bi bi-plus-square me-2"></i>New Request
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Approved">
                            <i class="bi bi-check2-square me-2"></i>Approved Requests
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Refuse">
                            <i class="bi bi-ban me-2"></i>Refused Requests
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-danger rounded-2" asp-action="Pending">
                            <i class="bi bi-list-task me-2"></i>Pending Requests
                        </a>
                    </li>
                   
                </ul>
                <button class="btn btn-outline-danger" onclick="clearAllPages()">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </button>
            </div>
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
</header>
<!--Main Navigation-->
<!--Main layout-->
<main >
    
    <div class="table-container text-center">
    <table class="table">
        <thead>
            <tr>
                <td colspan="1">Offer Name</td>
                <td colspan="1">Offer Description</td>
                <td colspan="1">Status</td>
                <td colspan="1">Created At</td>
                <td colspan="1">Action</td>

            </tr>
        </thead>
        <tbody>

            @foreach (var dat in Model)
            {
                <tr>

                    <td colspan="1">@dat.Offername</td>
                    <td colspan="1">@dat.Offerdescription</td>

                    <td colspan="1"><p class="btn btn-primary">Pending</p></td>
                    <td colspan="1">@dat.CreatedAt</td>
                    <td colspan="1"><a class="btn btn-outline-success" asp-action="Details" asp-route-id="@dat.UserId"><i class="bi bi-eye gx-5"> Details</i></a></td>
                </tr>
            }

        </tbody>
    </table>
    </div>
</main>
<!--Main layout-->
<script>
    function clearAllPages() {
        // Clear the browser history
        history.go(-(history.length - 1));

        // Redirect to the home page or any other page
        window.location.replace('/Home/Login');
    }
</script>