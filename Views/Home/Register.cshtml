@model Loyal.Models.User
<style>
    /* Hide the spinner controls */
    input[type="number"]::-webkit-outer-spin-button,
    input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield; /* Firefox */
    }
</style>


<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                            @if (TempData["UserExists"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["UserExists"]
                                </div>
                            }

                            <form asp-action="Adduser" class="mx-1 mx-md-4">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input asp-for="Username" class="form-control" required max-length="50"/>
                                        <label class="form-label" asp-for="Username">Username</label>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input asp-for="Email" type="email" class="form-control" required maxlength="100"/>
                                        <label class="form-label" asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input asp-for="PanCard" type="text" class="form-control" required maxlength="10"/>
                                        <label class="form-label" asp-for="PanCard">Pancard</label>
                                        <span asp-validation-for="PanCard" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input asp-for="AdhaarCard" class="form-control" id="number" type="number" max="9999999999999" required />
                                        <label class="form-label" asp-for="AdhaarCard">Adhaar Card Number</label>
                                        <span asp-validation-for="AdhaarCard" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input asp-for="PasswordHash" type="password" class="form-control" maxlength="10"  />
                                        <label class="form-label" asp-for="PasswordHash" >Password</label>
                                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-4">
                                    <input class="form-check-input me-2 " type="checkbox" value="" id="form2Example3c" />
                                    <label class="form-check-label ms-1 mt-sm-1" for="form2Example3c">
                                        I agree all statements in <a href="#!">Terms of service</a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Register</button>
                                </div>
                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                 class="img-fluid" alt="Sample image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('number').addEventListener('input', function (event) {
        if (this.value.length > 12) {
            this.value = this.value.slice(0, 12);
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
